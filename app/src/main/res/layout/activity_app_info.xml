<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.AppInfoActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/internet_library_online_education_concept_1" />

    <!-- App Introduction Title -->
    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Giới thiệu về AntiCP"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- App Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="AntiCP là ứng dụng đọc truyện online tiện lợi, mang đến cho bạn kho truyện phong phú, giao diện thân thiện và trải nghiệm mượt mà. Khám phá những câu chuyện hấp dẫn mọi lúc, mọi nơi cùng AntiCP!"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Development Team Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Đội ngũ phát triển"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Development Team Members -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="• Lê Hồng Anh\n• Lê Phương Anh\n• Vũ Thị Hồng Nhung"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Thông tin ứng dụng"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Version -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phiên bản: 1.0.0"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Contact -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Liên hệ: le2960620@gmail.com"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Privacy Policy -->
    <TextView
        android:id="@+id/tvPrivacyPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Chính sách bảo mật"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>